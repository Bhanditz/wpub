{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://w3c.github.io/wpub/schema/link.schema.json",
  "title": "Web Publication Links",
  "type": "object",
  "properties": {
    "url": {
      "type": "string"
    },
    "encodingFormat": {
      "type": "string"
    },
    "name": {
      "$ref": "https://w3c.github.io/wpub/schema/localizable.schema.json"
    },
    "description": {
      "$ref": "https://w3c.github.io/wpub/schema/localizable.schema.json"
    },
    "rel": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["url"]
}