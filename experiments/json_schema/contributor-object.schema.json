  "id": "https://w3c.github.io/wpub/experiments/json_schema/contributor-object.schema.json",
  "title": "Contributor Object",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "https://w3c.github.io/wpub/experiments/json_schema/localizable.schema.json"
    },
    "@id": {
      "type": "string",
      "format": "uri"
    },
