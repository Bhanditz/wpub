{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://w3c.github.io/wpub/experiments/json_schema/publication.schema.json",
  "title": "Web Publication Manifest",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "@id": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "$ref": "https://w3c.github.io/wpub/experiments/json_schema/localizable.schema.json"
    },
    "dateModified": {
      "type": "string",
      "anyOf": [
        {"format": "date"},
        {"format": "date-time"}
      ]
    },
    "datePublished": {
      "type": "string",
      "anyOf": [
        {"format": "date"},
        {"format": "date-time"}
      ]
    },
    "readingProgression": {
      "type": "string",
      "enum": ["rtl", "ltr"],
      "default": "ltr"
    },
    "inDirection": {
      "type": "string",
      "enum": ["rtl", "ltr", "auto"]
    },
    "inLanguage": {
      "type": ["string", "array"],
      "items": {
        "type": "string",
        "pattern": "^((?<grandfathered>(en-GB-oed|i-ami|i-bnn|i-default|i-enochian|i-hak|i-klingon|i-lux|i-mingo|i-navajo|i-pwn|i-tao|i-tay|i-tsu|sgn-BE-FR|sgn-BE-NL|sgn-CH-DE)|(art-lojban|cel-gaulish|no-bok|no-nyn|zh-guoyu|zh-hakka|zh-min|zh-min-nan|zh-xiang))|((?<language>([A-Za-z]{2,3}(-(?<extlang>[A-Za-z]{3}(-[A-Za-z]{3}){0,2}))?)|[A-Za-z]{4}|[A-Za-z]{5,8})(-(?<script>[A-Za-z]{4}))?(-(?<region>[A-Za-z]{2}|[0-9]{3}))?(-(?<variant>[A-Za-z0-9]{5,8}|[0-9][A-Za-z0-9]{3}))*(-(?<extension>[0-9A-WY-Za-wy-z](-[A-Za-z0-9]{2,8})+))*(-(?<privateUse>x(-[A-Za-z0-9]{1,8})+))?)|(?<privateUse>x(-[A-Za-z0-9]{1,8})+))$"
      },
      "pattern": "^((?<grandfathered>(en-GB-oed|i-ami|i-bnn|i-default|i-enochian|i-hak|i-klingon|i-lux|i-mingo|i-navajo|i-pwn|i-tao|i-tay|i-tsu|sgn-BE-FR|sgn-BE-NL|sgn-CH-DE)|(art-lojban|cel-gaulish|no-bok|no-nyn|zh-guoyu|zh-hakka|zh-min|zh-min-nan|zh-xiang))|((?<language>([A-Za-z]{2,3}(-(?<extlang>[A-Za-z]{3}(-[A-Za-z]{3}){0,2}))?)|[A-Za-z]{4}|[A-Za-z]{5,8})(-(?<script>[A-Za-z]{4}))?(-(?<region>[A-Za-z]{2}|[0-9]{3}))?(-(?<variant>[A-Za-z0-9]{5,8}|[0-9][A-Za-z0-9]{3}))*(-(?<extension>[0-9A-WY-Za-wy-z](-[A-Za-z0-9]{2,8})+))*(-(?<privateUse>x(-[A-Za-z0-9]{1,8})+))?)|(?<privateUse>x(-[A-Za-z0-9]{1,8})+))$"
    },
    "links": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "$ref": "https://w3c.github.io/wpub/experiments/json_schema/link.schema.json"
          }
        ]
      }
    },
    "readingOrder": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "$ref": "https://w3c.github.io/wpub/experiments/json_schema/link.schema.json"
          }
        ]
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "$ref": "https://w3c.github.io/wpub/experiments/json_schema/link.schema.json"
          }
        ]
      }
    }
  },
  "required": ["url"]
}